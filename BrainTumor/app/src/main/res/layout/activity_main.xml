<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/brain"
        android:layout_width="192dp"
        android:layout_height="202dp"
        android:layout_marginTop="72dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/select"
        android:layout_width="134dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:text="SELECT"
        app:layout_constraintEnd_toEndOf="@+id/brain"
        app:layout_constraintStart_toStartOf="@+id/brain"
        app:layout_constraintTop_toBottomOf="@+id/brain"
        tools:visibility="visible" />

    <Button
        android:id="@+id/predict"
        android:layout_width="139dp"
        android:layout_height="60dp"
        android:layout_marginBottom="72dp"
        android:text="PREDICT"
        app:layout_constraintBottom_toTopOf="@+id/output"
        app:layout_constraintEnd_toEndOf="@+id/select"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/select" />

    <TextView
        android:id="@+id/output"
        android:layout_width="274dp"
        android:layout_height="62dp"
        android:layout_marginBottom="72dp"
        android:fontFamily="sans-serif-black"
        android:text="OUTPUT"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/predict"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toStartOf="@+id/predict" />
</androidx.constraintlayout.widget.ConstraintLayout>